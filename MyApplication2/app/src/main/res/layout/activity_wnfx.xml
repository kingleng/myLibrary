<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.activity.WNFXActivity">

    <LinearLayout
        android:id="@+id/recyclerView_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ib"
        android:layout_margin="@dimen/qb_px_100"
        android:background="@drawable/bg_sfgk"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57px"
            android:background="#f5f5f5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:text="序列号"
                android:textColor="#333333"
                android:textSize="24px" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:text="开始时间"
                android:textColor="#333333"
                android:textSize="24px" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:text="持续时间"
                android:textColor="#333333"
                android:textSize="24px" />

            <TextView
                android:id="@+id/interval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:text="间隔时间"
                android:textColor="#333333"
                android:textSize="24px" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:scrollbarSize="8px"
            android:scrollbarThumbVertical="@color/color_f4dbd4"
            android:scrollbars="vertical"/>

    </LinearLayout>


    <Button
        android:id="@+id/ib"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="@dimen/qb_px_200"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/qb_px_300"
        android:background="@drawable/bg_2"
        android:text="开始"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/qb_px_150"
        android:text="00:00:00"
        android:textSize="@dimen/qb_px_50" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.YMTDActivity">

    <TextView
        android:id="@+id/setting"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_100"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/qb_px_60"
        android:background="@color/color_fde801"
        android:gravity="center"
        android:text="设置" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="倒计时：1:00  " />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_100"
        android:text="胎动次数：0" />

    <Button
        android:id="@+id/start"
        android:layout_width="@dimen/qb_px_250"
        android:layout_height="@dimen/qb_px_140"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_100"
        android:text="开始"
        android:textColor="@color/color_000000" />

    <Button
        android:id="@+id/tag"
        android:layout_width="@dimen/qb_px_250"
        android:layout_height="@dimen/qb_px_250"
        android:layout_below="@+id/start"
        android:background="@drawable/bg_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_100"
        android:text="胎动"
        android:textColor="@color/color_000000" />

</RelativeLayout>
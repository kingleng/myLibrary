<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b00C1235">


    <RelativeLayout
        android:layout_width="900px"
        android:layout_height="652px"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_bg_ffffff">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_margin="20px"
            android:padding="20px"
            android:background="@drawable/match_lawyer_failed_close" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="230px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:text="发现新版本"
            android:textColor="#666666"
            android:textSize="50px"/>

        <TextView
            android:id="@+id/updata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85px"
            android:text="立即更新"
            android:textColor="#666666"
            android:textSize="50px" />


    </RelativeLayout>

</RelativeLayout>
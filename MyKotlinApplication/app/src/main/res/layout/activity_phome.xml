<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PHomeActivity"
    android:background="@drawable/phome_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxh65">

        <ImageView
            android:id="@+id/id_weather_icon"
            android:layout_width="@dimen/px50"
            android:layout_height="@dimen/pxh50"
            android:layout_marginLeft="@dimen/px40"
            android:background="@drawable/p_weather_sun"
            android:layout_marginTop="@dimen/pxh10"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120"
            android:layout_marginTop="@dimen/pxh20"
            android:text="2019.3.4    星期一    14:36"
            android:textSize="@dimen/px26"
            android:textColor="#bb864e"/>
    </RelativeLayout>

    <com.cpsdna.app.mykotlinapplication.ui.widget.VerticalScrollTextView
        android:id="@+id/id_weather_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px410"
        android:layout_marginTop="@dimen/pxh5"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/toutiao_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxh75"
        android:layout_marginTop="@dimen/pxh70">

        <ImageView
            android:id="@+id/toutiao_layout_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <!--android:src="@drawable/phome_toutiao_bg"-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/toutiao_layout_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px250"
            android:layout_marginRight="@dimen/px36"/>
        <View
            android:id="@+id/toutiao_layout_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxh1629"
        android:layout_marginTop="@dimen/pxh156">

        <FrameLayout
            android:id="@+id/id_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pxh1629"/>

        <RelativeLayout
            android:id="@+id/web_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <ImageButton
            android:id="@+id/back_ib"
            android:layout_width="@dimen/px79"
            android:layout_height="@dimen/pxh79"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px25"
            android:layout_marginTop="@dimen/pxh362"
            android:src="@drawable/phome_back"
            android:background="@null"
            android:scaleType="centerInside"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxh104" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pxh109"
        android:src="@drawable/phome_guanggao_defult"
        android:scaleType="centerCrop"
        android:background="@null"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px40"
    android:paddingBottom="@dimen/px10">

    <RelativeLayout
        android:layout_width="@dimen/px756"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/z_layout_bg">

        <RelativeLayout
            android:layout_width="@dimen/px756"
            android:layout_height="@dimen/px460"
            android:layout_centerHorizontal="true">
        </RelativeLayout>

        <ImageView
            android:id="@+id/hot_icon"
            android:layout_width="@dimen/px46"
            android:layout_height="@dimen/px46"
            android:layout_marginLeft="@dimen/px34"
            android:layout_marginTop="@dimen/px21"
            android:src="@drawable/z_hot_icon"
            android:scaleType="centerCrop"
            android:background="@null"/>

        <TextView
            android:id="@+id/hot_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px86"
            android:layout_toRightOf="@+id/hot_icon"
            android:layout_marginLeft="@dimen/px14"
            android:gravity="center_vertical"
            android:text="大家都在问"
            android:textSize="@dimen/px30"
            android:textColor="@color/color_3c3f50"/>

        <LinearLayout
            android:id="@+id/refresh_layout"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px86"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/refresh_layout_iv"
                android:layout_width="@dimen/px27"
                android:layout_height="@dimen/px25"
                android:layout_marginLeft="@dimen/px10"
                android:src="@drawable/z_hot_refresh"
                android:scaleType="centerCrop"
                android:background="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px14"
                android:text="换一批"
                android:textColor="@color/color_a0acbf"
                android:textSize="@dimen/px24"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/px86"
            android:background="@color/color_edf1f6"/>

        <LinearLayout
            android:id="@+id/hot_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/px87"/>

        <ImageView
            android:id="@+id/msg_bg"
            android:layout_width="@dimen/px196"
            android:layout_height="@dimen/px209"
            android:src="@drawable/z_hot_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>
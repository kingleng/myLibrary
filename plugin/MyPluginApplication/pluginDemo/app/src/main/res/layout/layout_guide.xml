<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/guide_text"
        android:layout_width="@dimen/px570"
        android:layout_height="@dimen/px64"
        android:layout_marginLeft="@dimen/px80"
        android:layout_marginTop="@dimen/px30"
        android:background="@drawable/z_guide_bg"
        android:gravity="center"
        android:text="您的法律贴身管家，有问题直接向我提问吧"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/px26" />

    <RelativeLayout
        android:id="@+id/rela_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px133"
        android:layout_marginBottom="@dimen/px20">

        <TextView
            android:id="@+id/guide_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="以下是本次消息"
            android:textColor="@color/color_a0acbf"
            android:textSize="@dimen/px24" />

        <View
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px35"
            android:layout_toRightOf="@+id/guide_tv"
            android:background="@color/color_a0acbf" />

        <View
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px1"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px35"
            android:layout_toLeftOf="@+id/guide_tv"
            android:background="@color/color_a0acbf" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/robot_image"
        android:layout_width="@dimen/px163"
        android:layout_height="@dimen/px133"
        android:layout_below="@+id/rela_layout"
        android:layout_marginTop="@dimen/px15"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/z_icon2" />


    <RelativeLayout
        android:layout_width="@dimen/px702"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_layout"
        android:layout_marginTop="@dimen/px15"
        android:layout_toRightOf="@+id/robot_image">

        <RelativeLayout
            android:id="@+id/rebot_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/z_layout_bg">

            <TextView
                android:id="@+id/robot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_layout"
                android:layout_marginLeft="@dimen/px40"
                android:layout_marginTop="@dimen/px30"
                android:layout_marginRight="@dimen/px40"
                android:layout_marginBottom="@dimen/px30"
                android:text="您是想问一下问题吗？可以直接点击哦。如果不是，请直接在输入框提问 \(≧∇≦)/"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/px28" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px40"
    android:paddingBottom="@dimen/px10"
    android:paddingLeft="@dimen/px40"
    android:paddingRight="@dimen/px40">

    <LinearLayout
        android:id="@+id/lin_layout1"
        android:layout_width="0dp"
        android:layout_height="@dimen/px200"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/px220"
            android:layout_height="@dimen/px165"
            android:orientation="vertical"
            android:background="@drawable/layout_bg1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginLeft="@dimen/px20"
                android:text="文书模板"
                android:textSize="@dimen/px28"
                android:textColor="@color/color_ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginLeft="@dimen/px20"
                android:text="常见法律文书"
                android:textSize="@dimen/px24"
                android:textColor="@color/color_ffffff"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_layout2"
        android:layout_width="0dp"
        android:layout_height="@dimen/px200"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/px220"
            android:layout_height="@dimen/px165"
            android:orientation="vertical"
            android:background="@drawable/layout_bg2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginLeft="@dimen/px20"
                android:text="以案说法"
                android:textSize="@dimen/px28"
                android:textColor="@color/color_ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginLeft="@dimen/px20"
                android:text="热点案件分析"
                android:textSize="@dimen/px24"
                android:textColor="@color/color_ffffff"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_layout3"
        android:layout_width="0dp"
        android:layout_height="@dimen/px200"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/px220"
            android:layout_height="@dimen/px165"
            android:orientation="vertical"
            android:background="@drawable/layout_bg3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginLeft="@dimen/px20"
                android:text="费用计算器"
                android:textSize="@dimen/px28"
                android:textColor="@color/color_ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginLeft="@dimen/px20"
                android:text="法律费用计算"
                android:textSize="@dimen/px24"
                android:textColor="@color/color_ffffff"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_layout4"
        android:layout_width="0dp"
        android:layout_height="@dimen/px200"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/px220"
            android:layout_height="@dimen/px165"
            android:orientation="vertical"
            android:background="@drawable/layout_bg4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:layout_marginLeft="@dimen/px20"
                android:text="量刑预测"
                android:textSize="@dimen/px28"
                android:textColor="@color/color_ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginLeft="@dimen/px20"
                android:text="精准刑法预测"
                android:textSize="@dimen/px24"
                android:textColor="@color/color_ffffff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
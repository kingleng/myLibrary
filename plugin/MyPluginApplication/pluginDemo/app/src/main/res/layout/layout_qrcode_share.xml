<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/share_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="@dimen/px276"
        android:layout_height="@dimen/pxh424"
        android:orientation="vertical"
        android:background="@drawable/phome_share_bg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/pxh900"
        android:visibility="visible">

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="@dimen/px136"
            android:layout_height="@dimen/pxh136"
            android:layout_marginTop="@dimen/pxh89"
            android:layout_marginLeft="@dimen/px47"
            android:background="@null"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/share_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pxh22"
            android:layout_marginLeft="@dimen/px64"
            android:text="扫码办理"
            android:textColor="#ff4200"
            android:textSize="@dimen/px24"/>

    </LinearLayout>

</RelativeLayout>
